{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/app.config.js", "components/ApplicationCard.jsx", "components/ApplicationsFeed.jsx", "app/layout.jsx", "app/settings/page.jsx", "app/interviews/page.jsx", "app/home/page.jsx", "app/blog/page.jsx", "components/TopBar.jsx", "components/SideDrawer.jsx", "app/page.jsx", "app/applications/page.jsx"],
  "exclude": ["node_modules"]
}
